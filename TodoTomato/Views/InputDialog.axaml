<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:TodoTomato.ViewModels"
        x:Class="TodoTomato.Views.InputDialog"
        x:DataType="vm:InputDialogViewModel"
        Title="{Binding Title}"
        Width="300"
        Height="150"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="{Binding Message}" Margin="0,0,0,10"/>
        <TextBox Name="ResponseTextBox" Margin="0,0,0,10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Name="OkButton" Content="OK" Margin="0,0,10,0"/>
            <Button Name="CancelButton" Content="取消"/>
        </StackPanel>
    </StackPanel>
</Window>